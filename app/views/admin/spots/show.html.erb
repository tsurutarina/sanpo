<div class="container">
  <div class="row">
    <div class="col-8 offset-2">

      <% if @post.spot_image.attached? %>
        <%= image_tag @post.spot_image, class: "w-50 rounded" %>
      <% else %>
        <%= image_tag 'spot', class: "w-50 rounded" %>
      <% end %>

      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-1">
              <%= link_to customer_path(@post.customer.id), class: "text-dark" do %>
                <%= image_tag @post.customer.get_profile_image, size:'70x70', class: "rounded-circle" %>
              <% end %>
              <%= @post.customer.nickname %>
            </td>
          </tr>
          <tr>
            <td>
              <i class="fa-solid fa-map-location-dot"></i> <%= @post.address %><br>
              <i class="fa-regular fa-flag"></i> <%= @post.spot_name %>
              <%= link_to "削除", post_path(@post), class: "btn btn-outline-danger btn-sm offset-2", method: :delete %>
            </td>
          </tr>
          <tr>
            <td>
              <i class="fa-regular fa-comment ml-3"></i> <%= @post.body %>
            </td>
          </tr>
        </tbody>
      </table>

    <div class="offset-1">
      <p>コメント数 : <%= @post.post_comments.count %></p>
       <% @post.post_comments.each do |post_comment| %>
       <table class="table table-borderless">
         <tr  class="shadow-sm bg-light">
          <td class="col-1">
            <%= link_to customer_path(post_comment.customer.id), class: "text-dark" do %>
              <%= image_tag post_comment.customer.get_profile_image, size:'45x45', class: "rounded-circle" %>
            <% end %>
          </td>
          <td>
            <i class="fa-solid fa-user"></i> <%= post_comment.customer.nickname %><br>
            <p><i class="fa-regular fa-comments"></i> <%= post_comment.comment %></p>
          </td>
        </tr>
      </table>
      <% end %>
    </div>

    </div>
  </div>
</div>
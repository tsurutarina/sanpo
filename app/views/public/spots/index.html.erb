<!--<div class="container">-->
  <div class=" row">

    <div class="col-3">
      <!--サイドバーテンプレ-->
      <%= form_with model: @spot, url: spots_path do |f| %>
      <div class="field">
        <%= f.label:画像%>
        <%= f.file_field:spot_image,accept:"image/*" %>
      </div>
      <div class="field">
        <%= f.label :spot_name, "スポット名" %>
        <%= f.text_field :spot_name, class:"col-6 offset-1", autofocus: true, autocomplete: "spot_name" %>
      </div>
      <div class="field">
        <%= f.label :spot_address, "住所" %>
        <%= f.text_field :spot_address, class:"col-6 offset-1", autofocus: true, autocomplete: "spot_address" %>
      </div>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
    <% end %>


    </div>

    <div class="col-8 offset-1">
      <h4>すべての登録店舗</h4>

      <div class="card-columns">
        <%= @spots.each do |spot| %>

          <%= link_to spot_posts_path(spot.id) do %>
           <%= image_tag spot.get_image, class:"card-img-top"; %>
          <% end %>

          <div class="card-body">
            <div class="card-title">
              <p>スポット：<%= spot.spot_name %></p>
            </div>
            <div class="card-text">
              <p>住所：<%= spot.spot_address %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>

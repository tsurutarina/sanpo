<table class="table table-hover table-inverse">
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td>
        <%= link_to post_path(post.id) do %>
          <% if post.spot_image.attached? %>
            <%= image_tag post.spot_image, size: "100x100" %>
          <% else %>
            <%= image_tag 'spot', size: "100x100" %>
          <% end %>
        <% end %>
      </td>
      <td>
        <%= link_to customer_path(post.customer.id), class: 'nav-link text-dark' do %>
          <%= image_tag post.customer.get_profile_image, size:'70x70', class: "rounded-circle" %>
        <% end %>
      </td>
      <td>
        <i class="fa-regular fa-flag"></i>  <%= post.spot_name %><br>
        <i class="fa-regular fa-comment"></i> <%= post.body %><br>
        <i class="fa-regular fa-comments ml-3"></i> : <%= post.post_comments.count %>
        <i class="fa-regular fa-heart ml-4"></i> : <%= post.favorites.count %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

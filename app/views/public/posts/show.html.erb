<div class="row">
    <div class="col-3">
      <!--サイドバー-->
      <%= form_with model: @post_new, url: posts_path do |f| %>
        <div class="form-group ml-3">
          <%= f.label :spot_image, "画像" %><br>
          <%= f.file_field :spot_image, accept: "image/*" %><br>
        <!--</div>-->
        <!--<div class="form-group ml-3">-->
          <%= f.label :address, "住所" %><br>
          <%= f.text_field :address, class:"col-9", placeholder: "千葉県流山市おおたかの森東1-1-1" %><br>
        <!--</div>-->
        <!--<div class="form-group ml-3">-->
          <%= f.label :spot_name, "スポット" %><br>
          <%= f.text_field :spot_name, class:"col-9", placeholder: "流山市おおたかの森駅" %><br>
        <!--</div>-->
        <!--<div class="form-group ml-3">-->
          <%= f.label :body, "本文" %><br>
          <%= f.text_area :body, class:"col-10", placeholder: "みんなに共有しよう！" %><br>
        <!--</div>-->
        <!--<div class="form-action"><br>-->
          <%= f.submit "投稿する", class: "btn btn-outline-success offset-7" %>
        </div>
      <% end %>
    </div>

    <div class="col-9">
      <% if @post.spot_image.attached? %>
        <%= image_tag @post.spot_image, class: "w-50" %>
      <% else %>
        <%= image_tag 'spot' %>
      <% end %>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to customer_path(@post.customer.id), class: 'nav-link text-dark' do %>
                <%= image_tag @post.customer.get_profile_image, size:'70x70', class: "rounded-circle" %>
              <% end %>
              <%= @post.customer.nickname %>
            </td>
            <td>
            <i class="fa-solid fa-map-location-dot"></i> : <%= @post.address %><br><%= @post.spot_name %><br>
            <%= @post.body %>
          </td>
          </tr>
        </tbody>
      </table>
    </div>

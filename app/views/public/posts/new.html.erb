<div class="container">
  <div class="row">

    <div class="col-sm-8 offset-sm-2">
      <%= form_with model: @post, url: posts_path do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

        <div class="form mt-4">
          <div class="form-group">
            <%= f.label :spot_image, "画像" %><br>
            <%= f.file_field :spot_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :address_spot, "住所" %><br>
            <%= f.text_field :address_spot, class:"col-9", placeholder: "千葉県流山市平和台1-1-1" %>
          </div>
          <div class="form-group">
            <%= f.label :spot_name, "スポット" %><br>
            <%= f.text_field :spot_name, class:"col-9", placeholder: "流山市役所" %>
          </div>
          <div class="form-group">
            <%= f.label :body, "本文" %><br>
            <%= f.text_area :body, class:"col-10", placeholder: "みんなに共有しよう！" %>
          </div>
          <div class="form-action">
            <%= f.submit "投稿", class: "btn btn-outline-success offset-8 rounded-pill" %>
          </div>
        </div>

      <% end %>
    </div>

  </div>
</div>

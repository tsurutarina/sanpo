<!--current_customerじゃなかったら-->
<% if current_customer != customer %>
  <!--フォローしてたら？-->
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー中", customer_relationships_path(customer.id), method: :delete, remote: true, class: "btn btn-info rounded-pill col-6" %>
  <% else %>
    <%= link_to "フォロー", customer_relationships_path(customer.id), method: :post, remote: true, class: "btn btn-outline-info rounded-pill col-6" %>
  <% end %>
<% end %>

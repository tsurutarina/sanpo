<% if post.favorited_by?(current_customer) %>
  <%= link_to post_favorites_path(post), class: "text-danger", method: :delete, remote: true do %>
    <i class="fa-solid fa-heart ml-4"></i> <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), class: "text-dark", method: :post, remote: true do %>
    <i class="fa-regular fa-heart ml-4"></i> <%= post.favorites.count %>
  <% end %>
<% end %>

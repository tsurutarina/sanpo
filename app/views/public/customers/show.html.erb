<div class="container">
  <div class="row">

    <div class="col-sm-3 my-3">
      <% if customer_signed_in? %>
        <%= render "public/customers/side-info-favorites", post: @post, customer: @customer, favorites_count: @favorites_count %>
      <% end %>
    </div>

    <div class="col-sm-8">
      <h5><%= @customer.nickname %> さんの投稿</h5>
      <%= render "public/posts/index", posts: @posts %>
    </div>

  </div>
</div>

<table>
  <tr>
    <%= link_to customer_path(current_customer.id) do %>
      <%= image_tag current_customer.get_profile_image, size:'90x90', class: "rounded-circle" %>
    <% end %>
    </tr>
  <tr>
    <th>ユーザー：</th>
    <th><%= current_customer.nickname %></th>
  </tr>
  <tr>
    <th>フォロー数：</th>
    <th><%= current_customer.followings.count %></th>
  </tr>
  <tr>
    <th>フォロワー数：</th>
    <th><%= current_customer.followers.count %></th>
  </tr>
</table>

<div class="side-info">
  <% if current_customer.email != "guest@example.com" %>
    <%= link_to edit_customer_path(current_customer.id), class: "btn btn-outline-secondary rounded-pill col-8 offset-2" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>

<%= link_to new_post_path do %>
<span class="fa-stack fa-lg offset-10">
  <i class="fas fa-circle fa-stack-2x", style="color: #4682b4"></i>
  <i class="far fa-regular fa-pen-to-square fa-stack-1x", style="color: #fff"></i>
</span>
<% end %>
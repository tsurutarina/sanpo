<table class="table table-hover table-inverse">
  <tbody>
    <% customers.each do |customer| %>
    <tr>
      <td class="col-1">
        <%= link_to customer_path(customer.id) do %>
          <%= image_tag customer.get_profile_image, size:'60x60', class: "rounded-circle" %>
        <% end %>
      </td>
      <td>
        <div class="mt-3"><%= customer.nickname %></div>
      </td>
      <td>
        <div class="mt-3">
          <%= render "public/relationships/btn", customer: customer %>
        </div>
      </td>
      <td>
        <div class="mt-3">
          <i class="fa-solid fa-user-plus"></i> : <%= customer.followings.count %>
          <i class="fa-solid fa-users ml-4"></i> : <%= customer.followers.count %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
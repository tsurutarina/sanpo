<table class="table table-hover table-inverse">
  <tbody>
    <% customers.each do |customer| %>
    <tr>
      <td class="col-1">
        <%= link_to customer_path(customer.id) do %>
          <%= image_tag customer.get_profile_image, size:'60x60', class: "rounded-circle" %>
        <% end %>
      </td>
      <td>
        <div class="col-12 mt-3"><%= customer.nickname %></div>
      </td>
      <td>
        <div class="mt-3">
          <% if customer_signed_in? %>
            <div id="relationship_btn_icon_<%= customer.id %>">
              <%= render "public/relationships/btn_icon", customer: customer %>
            </div>
          <% end %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

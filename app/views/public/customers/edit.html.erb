<div class="container">
  <div class="row">

    <div class="col-sm-10 offset-1">
      <h4>ユーザー情報編集</h4>

      <%= form_with model: @customer, url: customer_path, local:true do |f| %>
      <%= render "layouts/error_messages", model: f.object %>

        <div class="form-group mt-5">
          <%= f.label :profile_image, "アイコン", class: "col-sm-2" %>
          <%= f.file_field :profile_image, class: "offset-1", accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :nickname, "ユーザー名", class: "col-sm-2" %>
          <%= f.text_field :nickname, class: "col-5 offset-1" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存", class: "btn btn-outline-primary col-5 col-lg-3 offset-sm-5 mt-4" %>
          <% unless current_customer.email == 'guest@example.com' %>
            <%= link_to "退会", customer_path(@customer), method: :delete, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger col-2 offset-1 mt-4" %>
          <% end %>
        </div>

      <% end %>

    </div>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
    <h4>ユーザー情報編集</h4>
      <% if @customer.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <%= form_with model: @customer, url: customer_path, local:true do |f| %>
    <div class="form-group mt-5">
      <%= f.label :profile_image, "アイコン", class: "col-2" %>
      <%= f.file_field :profile_image, class: "offset-1", accept: "image/*" %>
    </div>
    <div class="form-group">
      <%= f.label :nickname, "ユーザー名", class: "col-2" %>
      <%= f.text_field :nickname, class: "col-md-5 offset-1" %>
    </div>
    <div class="form-group">
      <%= f.submit "編集内容を保存", class: "btn btn-outline-primary offset-5 mt-4" %>
      <% unless current_customer.email == 'guest@example.com' %>
        <%= link_to "退会", unsubscribe_path(@customer), class: "btn btn-outline-danger col-2 offset-1 mt-4" %>
      <% end %>
    </div>
  <% end %>
    </div>
  </div>
</div>
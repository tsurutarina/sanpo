<div class="container">
  <div class="row mt-3">

    <div class="col-sm-10 offset-1">
    <h5>新規会員登録</h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

      <div class="field mt-4">
        <%= f.label :nickname, "ユーザーネーム", class: "col-sm-3" %>
        <%= f.text_field :nickname, class:"col-5 col-lg-3", placeholder:"さんぽちゃん", autofocus: true, autocomplete: "nickname" %>
      </div>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "col-sm-3" %>
        <%= f.email_field :email, class:"col-8 col-lg-5", placeholder:"sample@example.com", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード(6文字以上)", class: "col-sm-3" %>
        <%= f.password_field :password, class:"col-5 col-lg-3", autocomplete: "new-password" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-3" %>
        <%= f.password_field :password_confirmation, class:"col-5 col-lg-3", autocomplete: "new-password" %>
      </div>

      <div class="field-action mt-4">
        <%= f.submit "新規登録", class: "btn btn-outline-success col-3 offset-sm-4" %>
      </div>
    <% end %>
    </div>

  </div>

  <div class="row mt-3">
    <div class="col-sm-4 offset-sm-8">
      <h5>既に登録済みの方</h5>
      <%= link_to "こちら", new_customer_session_path %> からログインしてください。
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <%= link_to "管理者ログイン", new_admin_session_path, class: "btn btn-outline-secondary col-4 offset-8" %>
    </div>
  </div>

</div>
